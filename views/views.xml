    <!-- Adding send to pathao button and other necessary fields to the sale form view-->
    <record id="sale_order_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="priority">32</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_cancel']" position="after">
                <field name="is_pathao" invisible="1"/>
                <button name="send_sale_order_to_pathao" string="Send to Pathao" type="object" class="btn-primary" invisible="is_pathao == True"/>
            </xpath>

            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="store_id"/>
            </xpath>

            <xpath expr="//field[@name='store_id']" position="after">
                <field name="merchant_order_id"/>
            </xpath>

            <xpath expr="//field[@name='merchant_order_id']" position="after">
                <field name="recipient_name"/>
            </xpath>

            <xpath expr="//field[@name='recipient_name']" position="after">
                <field name="recipient_phone"/>
            </xpath>

            <xpath expr="//field[@name='recipient_phone']" position="after">
                <field name="recipient_address"/>
            </xpath>

            <xpath expr="//field[@name='recipient_address']" position="after">
                <field name="recipient_city"/>
            </xpath>

            <xpath expr="//field[@name='recipient_city']" position="after">
                <field name="recipient_zone" domain="[('city_id', '=', recipient_city)]"/>
            </xpath>

            <xpath expr="//field[@name='recipient_zone']" position="after">
                <field name="recipient_area" domain="[('zone_id', '=', recipient_zone)]"/>
            </xpath>

            <xpath expr="//field[@name='recipient_area']" position="after">
                <field name="special_instruction"/>
            </xpath>

            <xpath expr="//field[@name='special_instruction']" position="after">
                <field name="item_quantity"/>
            </xpath>

            <xpath expr="//field[@name='item_quantity']" position="after">
                <field name="item_weight"/>
            </xpath>

            <xpath expr="//field[@name='item_weight']" position="after">
                <field name="amount_to_collect"/>
            </xpath>

            <xpath expr="//field[@name='amount_to_collect']" position="after">
                <field name="item_description"/>
            </xpath>
        </field>
    </record>
